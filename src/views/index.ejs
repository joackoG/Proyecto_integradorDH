<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include('partials/head', {estilo: 'style' , titulo:'Home'} ) %>

    <body>

        <%- include('./partials/headNavBar', {title: 'nav' }) %>

            <section id="body">
                <main>
                    <%- include('./partials/banner') %>

                        <div>
                            <a class="submit-btn" href="/products/create">Agregar Producto</a>

                        </div>
                        <section>
                            <div class="cont-titulo">
                                <h2 class="">Ofertas</h2>
                            </div>

                        <section id="vistaprod">
                                <% oferta.forEach(product=> { %>
                                    <div class="prod">
                                        <a href="/products/detail/<%= product.id%>">
                                            <img class="img-produto" src="/img/imgProducto/<%= product.image %>"
                                                alt="imagen de producto">
                                        </a>
                                        <p>
                                            <i id="imgEnvio" class="fa-solid fa-truck"></i>
                                        </p>
                                        <a href="/products/detail/<%= product.id%>">

                                            <h3>
                                                <%= product.name %>
                                            </h3>
                                        </a>

                                        <div class="info-prod">
                                            <p class="">
                                                <%= product.autor %>
                                            </p>
                                            <p class="precio-txt">
                                                <%= product.price %>
                                            </p>
                                            <span>
                                                <%= product.discount %> % OFF
                                            </span>

                                        </div>
                                        <a class="submit-btn" href="products/edit/<%= product.id%>">Editar Producto</a>
                                        <a href="/products/delete/<%= product.id %>" class="btn-delete"
                                            onclick="return confirm('¿Estás seguro de que quieres eliminar este producto?')">Eliminar
                                            Producto <i class="fas fa-trash"></i></a>
                                    </div>
                                <% }) %>
                        </section>

                        <section>
                            <div class="cont-titulo">
                                <h2 class="">Ingresos</h2>
                            </div>
                            <section id="vistaprod">
                                <% nuevo.forEach(product=> { %>

                                    <div class="prod">

                                        <a href="/products/detail/<%= product.id%>">
                                            <img class="img-produto" src="/img/imgProducto/<%= product.image %>"
                                                alt="imagen de producto">
                                        </a>
                                        <p>
                                            <i id="imgEnvio" class="fa-solid fa-truck"></i>
                                        </p>
                                        <a href="/products/detail/<%= product.id%>">

                                            <h3>
                                                <%= product.name %>
                                            </h3>
                                        </a>

                                        <div class="info-prod">
                                            <p class="">
                                                <%= product.autor %>
                                            </p>
                                            <p class="precio-txt">
                                                <%= product.price %>
                                            </p>
                                            <span>
                                                <%= product.discount %> % OFF
                                            </span>

                                        </div>
                                        <a class="submit-btn" href="products/edit/<%= product.id%>">Editar Producto</a>
                                        <a href="/products/delete/<%= product.id %>" class="btn-delete"
                                            onclick="return confirm('¿Estás seguro de que quieres eliminar este producto?')">Eliminar
                                            Producto <i class="fas fa-trash"></i></a>
                                    </div>

                                    <% }) %>
                            </section>
                        </section>

                </main>

                </h1>
                </div>
            </section>
            <%- include('./partials/footer') %>
    </body>

</html>