<!DOCTYPE html>
<%- include('partials/head', {estilo: 'formulario-style' , titulo:'Registro de usuario'}) %>

    <body>
        <%- include('partials/headNavBar', {title: 'nav' }) %>

        <% if (successMessage) { %>
            <div class="alert alert-success">
                <%= successMessage %>
            </div>
        <% } %>

            <section id="body" class="container-form">

                <div class="caja-register">
                    <!-- <h2 class="title-style1"> Registro de nuevo usuario </h2> -->
                    <form action="/users/register" method="post" class="form">
                        <span class="heading">Registro de nuevo usuario</span>
                        <div class="form-group">
                            <label for="nombre">Nombre y Apellido</label>
                            <input type="text" name="nombre" id="nombre" placeholder="Ingrese su nombre" class="form-input">

                        </div>
                        <div class="form-group">
                            <label for="fechaNac">Fecha de nacimiento</label>
                            <input type="date" name="fechaNac" id="fechaNac" class="form-input">
                        </div>

                        <div class="form-group">
                            <label for="correo">Correo electronico</label>
                            <input type="text" name="correo" id="email" placeholder="Ingrese un correo electronico" class="form-input">

                        </div>
                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <input type="password" name="password" id="password" placeholder="Ingrese una contraseña" class="form-input">
                        </div>


                        <!-- 
                <label for="">Repita Contraseña</label>
                <input type="password" name="passwordRep" id="passwordRep" placeholder="Repita su contraseña"> -->

                        <div class="form-pie">
                            <button type="submit" class="btn-submit"> Registarse</button>
                            <button type="reset" class="btn-limpiar">Limpiar</button>

                        </div>
                        
                    </form>
                    <div >
                       
                            <a class="cancelar-btn" href="/"> Cancelar</a>
                    
                    </div>
                    <div class="footer-register">
                    
                           <span>¿tenes una cuenta? <a href="/login">login</a></span>                 
                    </div>

                   

                </div>
            </section>
            <%- include('./partials/footer') %>
    </body>


    </html>