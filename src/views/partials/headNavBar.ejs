<section id="nav">
    <nav>

        <div id="log">
            <a href="/"><img src="/img/Logo.png" width="100" alt="logo"></a>
            <h1>Shenlong Comics</h1>
        </div>

        <div class="navBar">
            <!-- <ul type="none"> -->

            <% if (!userLogged ) { %>
                <div class="container-link" >
                    <a href="/users/register">Registrarse</a>
                    <a href="/users/login">Iniciar sesión</a>
                </div>
             
            <% } else { %>
       
                <div class="container-link">
                    <img class="iconoPerfil" src="/img/imgUsuario/<%= userLogged.fotoPerfil %>" alt="Foto de perfil">
                    <a href="/users/profile/<%= userLogged.id %>" class="btn-link">Ver Perfil</a>
                </div>
                
                <div class="container-link">
                    <form action="/users/logout" method="POST" class="nav-link">
                        <button type="submit" class="btn-link">Cerrar sesión</button>
                    </form>
                </div>
            <% } %>

            <div class=" container-link">
                <a class="icon-card" href="/productCart" title="Ver carrito de compras">
                    <i class="fa-solid fa-cart-shopping"></i>
                </a>
            </div>

        </div>

    </nav>
</section>