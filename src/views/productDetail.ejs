<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include('./partials/head', {estilo: 'productDetail-style' , titulo:'Detalle del producto'}) %>

    <body>

            <%- include('partials/headNavBar', {title: 'nav' }) %>
                <section id="body">
                    <main class="container">
                        <div class="card">
                            <div>
                                <img src="/img/imgProducto/<%= productos.image %>" alt="imagen del producto" class="producto-img">
                            </div>
                            

                            <div class="caja-detalle">

                                <div>
                                    <h2>
                                        <%= productos.nombreProd %>
                                    </h2>

                                    <h4>
                                        <%=productos.autor %>
                                    </h4>
                                    <hr>
                                </div>

                                <div>
                                    <p class="product-detail-price small">
                                        <span>$<%= productos.precio %></span>
                                        /
                                        <b>
                                            <%= productos.descuento %>% OFF
                                        </b>
                                    </p>
                                    <h3>
                                        $ <%= productos.precio - (productos.precio * productos.descuento)/100 %>
                                    </h3>

                                    <div class="cant-input">
                                        <label for="">Cantidad:</label>
                                        <input type="number">
                                    </div>

                                </div>
                                <hr>
                                <p>
                                    <%= productos.descripcion %>
                                </p>
                                <div class="carrito-btn">

                                    <button type="submit" class="submit-btn" hreft=""> <a href="/productCart">Agregar al
                                            Carrito</a></button>

                                </div>

                            </div>
                         
                        </div>


                        </div>

                </section>


                <%- include('./partials/footer') %>
        </body>

</html>