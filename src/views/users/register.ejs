<!DOCTYPE html>
<%- include('../partials/head', {estilo: 'formulario-style' , titulo:'Registro de usuario'}) %>

    <body>
        <%- include('../partials/headNavBar', { title: 'nav',userLogged}) %>
        <% if  (typeof successMessage !== 'undefined' && successMessage) { %>
            <div class="container-alert">
                <div class="alert mensaje-ok">
                    <%= successMessage %>

                </div>
            </div>

            <% } %>
            <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                <div class="container-alert">
                    <div class="alert alert-danger">
                        <%= errorMessage %>
                    </div>
                </div>
            <% } %>
            <section id="body" class="container-form">
               
                <div class="caja-register">
       
                    <!-- <h2 class="title-style1"> Registro de nuevo usuario </h2> -->
                    <form action="/users/register" method="post" class="form" enctype="multipart/form-data" id="formulario">
                        <span class="heading">Registro de nuevo usuario</span>
                        <div class="form-group">
                            <label for="nombre">Nombre y Apellido</label>
                            <input type="text" name="nombre" id="nombre" placeholder="Ingrese su nombre" class="form-input" value="<%= locals.oldData && oldData.nombre ? oldData.nombre : null %>" >
                            <% if (locals.errors && errors.nombre) { %>
                                <div class="alert-validation">
                                    <p><%= errors.nombre.msg %></p>
                                </div>
                            <% } %>

                        </div>
                        <div class="form-group">
                            <label for="fechaNac">Fecha de nacimiento</label>
                            <input type="date" name="fechaNac" id="fechaNac" class="form-input" value="<%= locals.oldData && oldData.fechaNac ? oldData.fechaNac : null %>">
                            <% if (locals.errors && errors.fechaNac) { %>
                                <div class="alert-validation">
                                    <p><%= errors.fechaNac.msg %></p>
                                </div>
                            <% } %>
                        </div>

                        <div class="form-group">
                            <label for="correo">Correo electronico</label>
                            <input type="text" name="correo" id="email" placeholder="Ingrese un correo electronico" class="form-input" value="<%= locals.oldData && oldData.correo ? oldData.correo : null %>">
                            <% if (locals.errors && errors.correo) { %>
                                <div class="alert-validation">
                                    <p><%= errors.correo.msg %></p>
                                </div>
                            <% } %>

                        </div>
                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <input type="password" name="password" id="password" placeholder="Ingrese una contraseña" class="form-input">
                            <% if (locals.errors && errors.password) { %>
                                <div class="alert-validation">
                                    <p><%= errors.password.msg %></p>
                                </div>
                            <% } %>
                        </div>
                        <div class="form-group">
                            <label for="fotoPerfil" class="form-label">Seleccione una imagen:</label>
                            <input type="file" name="fotoPerfil" id="fotoPerfil" >
                        </div>
                        <% if (locals.errors && errors.fotoPerfil) { %>
                            <div class="alert-validation">
                                <p><%= errors.fotoPerfil.msg %></p>
                            </div>
                        <% } %>

                        <div class="form-pie">
                            <button type="submit" class="btn-submit"> Registarse</button>
                            <button type="reset" class="btn-limpiar">Limpiar</button>

                        </div>
                        
                    </form>
                    <div >
                       
                            <a class="cancelar-btn" href="/"> Cancelar</a>
                    
                    </div>
                    <div class="footer-register">
                    
                           <span>¿tenes una cuenta? <a href="/login">login</a></span>                 
                    </div>

                   

                </div>
            </section>
            <%- include('../partials/footer') %>
	<script src="/js/userJs/registerValidate.js"> </script>

    </body>


    </html>