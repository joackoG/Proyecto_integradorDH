<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include('../partials/head', {estilo: 'productDetail-style' , titulo:'Detalle del producto'}) %>

    <body>
        <%- include('../partials/headNavBar', { title: 'nav', userLogged }) %>
            <section id="body">
                <main class="prod2">
                    <div class="card">
                    
                        <div>
                            <img src="/img/imgProducto/<%= productos.image %>" alt="imagen del producto"
                                class="producto-img">
                        </div>


                        <div class="caja-detalle ">
                            <div class="caja-titulo">
                                <% if(productos.stock === 0) {%>
                                    <div class="mensaje-danger">
                                        <h3 class="">Producto sin stock</h3>
                                    </div>
                                    <% } %>
    
                                <h2>
                                    <%= productos.nombreProd %>
                                </h2>
                              
                            </div>
                            <div class="caja-subtitulo">
                                <h4>
                                    <%=productos.autor %>
                                </h4>
                            </div>
                            <hr>

          


                            <div class="caja-informacion">
                                <div class="">
                                    
                                    <div>
                                        <% if(productos.descuento > 0 ){ %>
                                            <p>$<%= productos.precio %> /
                                        <%= productos.descuento %>% OFF </p>
                                    <% } %>
                                </div>

                                </div>
                                <div>
                                    <h3>
                                        $ <%= productos.precio - (productos.precio * productos.descuento)/100 %>
                                    </h3>
                                </div>
                            </div>
                            <div class="caja-cantidad">
                                <div class="input-cantidad">
                                    <label for="">Cantidad:</label>
                                    <input type="number">
                                </div>

                                <div>
                                    <p>Cantidad disponible: <%= productos.stock %></p>
                                </div>
                            </div>
                            <hr>
                            <div class="txt-descripcion">
                                <%= productos.descripcion %>
                            </div>
                            <div class="carrito-btn">

                                <button type="submit" class="btn-carrito" hreft=""> <a href="/productCart">Agregar al
                                        Carrito</a></button>

                            </div>
                            <div>
                                <% if(userLogged){ %>
                                                                    <!-- Editar producto -->
                                <div class="container-btn">
                                    <a class="edit-button" href="/products/edit/<%= productos.id %>">
                                        <i class="fa-solid fa-pen editIcon"></i>
                                    </a>
                                </div>
                               
                                <!-- eliminar producto -->
                                <form id="deleteForm" class="container-btn" action="/products/delete/<%= productos.id %>" method="POST">
                                    <button type="submit" class="btn-delete">
                                        <i class="fa-solid fa-trash fa-2xl icon"></i>
                                    </button>
                                </form>
                                

                                    <% } %>

                            </div>

                        </div>

                    </div>


                    </div>

            </section>


            <%- include('../partials/footer') %>
        	<script src="/js/productsJs/deleteProdValidate.js"> </script>

    </body>

</html>