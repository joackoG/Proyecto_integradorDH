<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>

	<%- include('partials/head', {estilo: 'formulario-style' , titulo:'Home'} ) %>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<link rel="stylesheet" href="/css/formulario-style.css">

</head>


	<body>
		<!-- Header -->
		<%- include('partials/headNavBar') %>
			<!-- /Header -->

			<div class="container products-wrapper">

				<div class="caja-vista">
					<div class="titulo">
						<h2 class="products-title">Estás editando: <i>
								<%= product.name %>
							</i></h2>
					</div>
					<form action="/products/edit/<%= product.id %>?_method=PUT" method="POST">
						<div class="form">
							<div class="datos">
								<label for="name" class="form-label">Nombre del producto:</label>
								<input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok"
									class="form-input" value="<%= product.name %>">

								<label for="price" class="form-label">Precio del producto:</label>
								<input type="text" id="price" name="price" placeholder="Ej: 5678"
									value="<%= product.price %>" class="form-input">

								<label for="discount" class="form-label">Descuento:</label>
								<input type="text" id="discount" name="discount" placeholder="Ej: 15"
									value="<%= product.discount %>" class="form-input">

								<label for="category" class="form-label">Categoría:</label>
								<select name="category" id="category" class="form-input">
									<option value="">Elegí</option>
									<option value="oferta" <%=product.category=='oferta' ? 'selected' : '' %>>En
										oferta</option>
									<option value="nuevo" <%=product.category=='visited' ? 'nuevo' : '' %>>Últimos
										agregados</option>
								</select>

								<label for="description" class="form-label">Descipción:</label>
								<textarea name="description" id="description"
									class="form-input"><%= product.description %></textarea>
							</div>
							<div class="boton">
								<button type="submit" class="buy-now-button">Guardar producto</button>
							</div>
						</div>
					</form>
				</div>

			</div>
			<!-- /todos los productos -->

			<!-- footer -->
			<%- include('partials/footer') %>
				<!-- /footer -->
	</body>

</html>