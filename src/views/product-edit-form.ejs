<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head.ejs' , {estilo:'formulario-style', titulo:'Editar producto'}) %>
<!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css"> -->
<!-- <link rel="stylesheet" href="/css/bootstrap-grid.min.css"> -->
<!-- <link rel="stylesheet" href="/css/formulario-style.css"> -->
<body>
	<!-- Header -->
	<%- include('partials/headNavBar') %>
	<!-- /Header -->

	<div class="container products-wrapper">

		<div class="caja-register">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%= product.name %></i></h2>
			</div>
			<form action="/products/edit/<%= product.id %>?_method=PUT" method="POST">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" class="form-input" value="<%= product.name %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" placeholder="Ej: 5678" value="<%= product.price %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" placeholder="Ej: 15" value="<%= product.discount %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="">Elegí</option>
							<option value="in-sale" <%= product.category == 'in-sale' ? 'selected' : '' %>>En oferta</option>
							<option value="visited" <%= product.category == 'visited' ? 'selected' : '' %>>Últimos agregados</option>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%= product.description %></textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	
	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>