<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head.ejs' , {estilo:'formulario-style', titulo:'Editar producto'}) %>

<body>
	<!-- Header -->
	<%- include('partials/headNavBar') %>
	<!-- /Header -->

	<div class="container products-wrapper">

		<div class="caja-register">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%= producto.nombreProd %></i></h2>
			</div>
			<form action="/products/edit/<%= producto.id %>?_method=PUT" method="POST">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="nombreProd" class="form-label">Nombre del producto:</label>
						<input type="text" id="nombreProd" name="nombreProd" value="<%= producto.nombreProd %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="autor" class="form-label">Autor del producto:</label>
						<input type="text" id="autor" name="autor" value="<%= producto.autor %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="generos_idGenero" class="form-label">Genero:</label>
						<select name="generos_idGenero" id="generos_idGenero" class="form-input">
					        <% Genero.forEach(genero => { %>
								<option value="<%= genero.idGenero %>"><%= genero.genero %></option>
							<% }); %>
						</select>
					</div>
					
					<div class="col-12">
						<label for="descripcion" class="form-label">Descipción:</label>
						<textarea name="descripcion" id="descripcion" class="form-input"></textarea>
					</div>

					<div class="col-12 col-md-6">
						<label for="precio" class="form-label">Precio del producto:</label>
						<input type="text" id="precio" name="precio" placeholder="Ej: 5678" class="form-input">
					</div>

					<div class="col-12 col-md-6">
						<label for="descuento" class="form-label">Descuento:</label>
						<input type="text" id="descuento" name="descuento" placeholder="Ej: 15" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="stock" class="form-label">Stock:</label>
						<input type="text" id="stock" name="stock" placeholder="Ej: 15" class="form-input">
					</div>
					<div>
						<label for="image">Seleccione una imagen:</label>
						<input type="file" name="image" id="image" accept="image/*">
					</div>
					<div class="col-12 ">
						<button type="submit" class="buy-now-button submit-btn">Actualizar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	
	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>